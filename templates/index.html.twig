<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>SocialPubli-test</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>Personajes de Star Wars</h1>
    <form id="fetch-people-form">
        <label for="page">Página:</label>
        <input type="number" id="page" name="page" value="1" min="1">
        <button type="submit">Obtener datos</button>
    </form>
    <table border="1">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Altura</th>
                <th>Masa</th>
                <th>Color de pelo</th>
                <th>Color de piel</th>
                <th>Color de ojos</th>
                <th>Año de nacimiento</th>
                <th>Género</th>
            </tr>
        </thead>
        <tbody id="people-table-body">
        </tbody>
    </table>
    <script>
        $(document).ready(function() {
            $('#fetch-people-form').on('submit', function(event) {
                event.preventDefault();
                let page = $('#page').val();
                $.post('/api/people', { page: page }, function(data) {
                    let tbody = $('#people-table-body');
                    tbody.empty();
                    data.results.forEach(function(person) {
                        tbody.append(`
                            <tr>
                                <td>${person.name}</td>
                                <td>${person.height}</td>
                                <td>${person.mass}</td>
                                <td>${person.hair_color}</td>
                                <td>${person.skin_color}</td>
                                <td>${person.eye_color}</td>
                                <td>${person.birth_year}</td>
                                <td>${person.gender}</td>
                            </tr>
                        `);
                    });
                });
            });
        });
    </script>
</body>
</html>
